<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.96.3 -->
<interface>
  <!-- interface-name window.ui -->
  <requires lib="gio" version="2.0"/>
  <requires lib="gtk" version="4.6"/>
  <requires lib="libadwaita" version="1.7"/>
  <template class="MDotWindow" parent="AdwApplicationWindow">
    <property name="content">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="header">
            <child>
              <object class="AdwSplitButton" id="open_btn">
                <property name="action-name">win.open</property>
                <property name="label" translatable="yes">__Open_project</property>
                <property name="menu-model">proj_menu</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="undo_btn">
                <property name="action-name">win.undo</property>
                <property name="icon-name">edit-undo-symbolic</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="redo_btn">
                <property name="action-name">win.redo</property>
                <property name="icon-name">edit-redo-symbolic</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton" id="menu_btn">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">main_menu</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="newfile_btn">
                <property name="action-name">win.mkfile</property>
                <property name="icon-name">list-add-symbolic</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkOverlay">
            <property name="child">
              <object class="GtkStack" id="page_stack">
                <child>
                  <object class="GtkStackPage">
                    <property name="child">
                      <object class="GtkLabel">
                        <property name="label">Empty Page</property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
    <property name="default-height">800</property>
    <property name="default-width">1400</property>
    <property name="title">MeriseGTK</property>
  </template>
  <menu id="proj_menu"/>
  <menu id="main_menu">
    <item>
      <attribute name="action">win.mkproj</attribute>
      <attribute name="label" translatable="yes">__New_project</attribute>
    </item>
  </menu>
</interface>
